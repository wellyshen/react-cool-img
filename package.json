{
  "name": "react-cool-img",
  "version": "0.5.0",
  "description": "A cool react <Img /> component.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "keywords": [
    "react",
    "react-component",
    "ui",
    "img",
    "performance",
    "typescript"
  ],
  "author": "WellyShen <hivoid19@gmail.com> (https://github.com/wellyshen)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wellyshen/react-cool-img"
  },
  "homepage": "https://github.com/wellyshen/react-cool-img",
  "bugs": {
    "url": "https://github.com/wellyshen/react-cool-img/issues"
  },
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "scripts": {
    "dev": "yarn clean:dev && rollup -c rollup/config.js -w --environment BUILD:dev",
    "build:example": "yarn clean:example && yarn clean:dev && rollup -c rollup/config.js --environment BUILD:example",
    "build:dist": "yarn clean:dist && BABEL_ENV=dist rollup -c rollup/config.js --environment BUILD:dist",
    "build": "npm-run-all build:*",
    "test": "jest --coverage",
    "test:watch": "yarn test --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "yarn type-check --watch",
    "lint:code": "eslint --fix . --ext .js,.ts,.tsx",
    "lint:style": "stylelint --fix \"./**/*.css\" \"./**/*.ts\" \"./**/*.tsx\"",
    "lint": "npm-run-all lint:*",
    "clean:dev": "rm -rf src/.dev",
    "clean:example": "rm -rf example .size-snapshot.json",
    "clean:dist": "rm -rf dist .size-snapshot.json",
    "clean:test": "rm -rf coverage",
    "clean": "npm-run-all clean:*",
    "coveralls": "yarn test && cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "eslint --fix",
    "*.{css,ts,tsx}": "stylelint --fix",
    "*.{json,md}": "prettier --write"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "useBuiltIns": "usage",
          "corejs": 3
        }
      ],
      "@babel/typescript",
      "@babel/react"
    ],
    "env": {
      "development": {
        "presets": [
          "@emotion/babel-preset-css-prop"
        ],
        "plugins": [
          "emotion"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "emotion"
    ],
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "typescript": {}
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ],
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-ignore": "off"
    }
  },
  "eslintIgnore": [
    "example",
    "dist"
  ],
  "prettier": {
    "singleQuote": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "string-quotes": "single",
      "declaration-empty-line-before": null
    },
    "ignoreFiles": [
      "example/**/*.css",
      "coverage/**/*.css"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.ts"
    ],
    "moduleNameMapper": {
      "\\.(apng|bmp|gif|ico|cur|jpg|jpeg|jfif|pjpeg|pjp|png|svg|tif|tiff|webp)$": "<rootDir>/__mocks__/file.ts"
    },
    "collectCoverageFrom": [
      "src/utils/*.ts",
      "src/Img/*.tsx"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.22",
    "normalize.css": "^8.0.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/preset-env": "^7.7.1",
    "@babel/preset-react": "^7.7.0",
    "@babel/preset-typescript": "^7.7.2",
    "@emotion/babel-preset-css-prop": "^10.0.23",
    "@rollup/plugin-replace": "^2.2.1",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.23",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/vfile-message": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "babel-plugin-emotion": "^10.0.23",
    "core-js": "^3.4.1",
    "coveralls": "^3.0.7",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.6.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-emotion": "^10.0.14",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.12.0",
    "rollup": "^1.27.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-bundle-html": "^0.2.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-livereload": "^1.0.4",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-size-snapshot": "^0.10.0",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-url": "^3.0.0",
    "stylelint": "^12.0.0",
    "stylelint-config-prettier": "^6.0.0",
    "stylelint-config-standard": "^19.0.0",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "react": "16.12.x",
    "react-dom": "16.12.x"
  }
}
